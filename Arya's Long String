import java.util.*;


public class AryasLongString {
    public static int fun(String s, int k, int n, char c)
    {
       int count=0;
      StringBuilder sb=new StringBuilder();
        for (int j=0;j<k;j++){
            sb.append(s);
        }
        for (int j=0;j<n;j++){
            if(sb.charAt(j)==c){
                count++;
            }
        }
        return count;
    }
    public static void main(String args[]) {
        AryasLongString X = new AryasLongString();
        System.out.println(X.fun("ABA",3,7,'B'));

    }
}


