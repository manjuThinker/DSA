
import java.util.*;
class FacingTheSun {
    int countBuildings(int h[], int n) {
        int max=Integer.MIN_VALUE;
        int count=0;
        for (int i=0;i<n;i++){
            if(h[i]>max){
                max=h[i];
                count++;
            }
        }
        return count;

    }

    public static void main(String args[]) {
        FacingTheSun X = new FacingTheSun();
        int[] C = {7, 4, 8, 2, 9};
        System.out.println(X.countBuildings(C,C.length));
     
    }
}
